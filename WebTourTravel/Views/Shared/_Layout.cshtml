    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Lấy tên của trang hiện tại từ URL
            const currentPath = window.location.pathname;

            // Kiểm tra nếu đã có mục được lưu trữ trước đó
            const storedPath = localStorage.getItem('activeNavPath');
            const navItems = document.querySelectorAll('.rd-nav-item');

            navItems.forEach(item => {
                const link = item.querySelector('.rd-nav-link');
                const linkPath = new URL(link.href).pathname;

                // Xóa class active hiện tại
                item.classList.remove('active');

                // Kiểm tra nếu linkPath khớp với storedPath hoặc currentPath
                if (linkPath === storedPath || linkPath === currentPath) {
                    item.classList.add('active');
                }

                // Thêm sự kiện click để lưu trữ đường dẫn vào localStorage
                link.addEventListener('click', function () {
                    localStorage.setItem('activeNavPath', linkPath);
                });
            });
        });


    </script>
