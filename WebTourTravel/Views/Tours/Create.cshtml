@model WebTourTravel.Tour

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <style>
        /* General styles */
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }

        h4 {
            color: #333;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        /* Form styles */
        .form-horizontal {
            max-width: 800px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .control-label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
            }

        .text-danger {
            color: #dc3545;
            margin-top: 5px;
            font-size: 0.875em;
        }

        .btn {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        /* Back to list link */
        .back-to-list {
            margin: 20px 0;
            text-align: center;
        }

            .back-to-list a {
                color: #28a745;
                padding: 10px 20px;
                background-color: #f8f9fa;
                border: 1px solid #28a745;
                border-radius: 4px;
                text-decoration: none;
            }

                .back-to-list a:hover {
                    background-color: #28a745;
                    color: #fff;
                }

    </style>
</head>
<body>
    @using (Html.BeginForm("Create", "Tours", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Quản lý Tour</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.id_tour, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.id_tour, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.id_tour, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Tour Mẫu</label>
                <div class="col-md-10">
                    @Html.DropDownList("id_tourmau", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_tourmau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Hướng dẫn viên</label>
                <div class="col-md-10">
                    @Html.DropDownList("id_hdv", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.id_hdv, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Tên Tour</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenTour, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenTour, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Ngày giờ khởi hành</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.KhoiHanh, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(model => model.KhoiHanh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Ngày tập trung</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.TapTrung, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.TapTrung, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label style="font-weight: bold;">Thời gian</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ThoiGian, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThoiGian, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Nơi khởi hành</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NoiKhoiHanh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NoiKhoiHanh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Số lượng tối đa</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuongToiDa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SoLuongToiDa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Giá người lớn</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GiaNguoiLon, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiaNguoiLon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Giá trẻ em</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GiaTreEm, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiaTreEm, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Đánh giá</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DanhGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DanhGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label style="font-weight: bold;">Hình ảnh</label>
                <div class="col-md-10">
                    <input type="file" name="imageFile" id="imageFile" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Avata, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div class="back-to-list">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "back-to-list-link" })
    </div>
</body>
</html>
