@model IEnumerable<WebTourTravel.Tour>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/DanhSachTour.cshtml";
}




<h1 style="text-align: center; align-items: center; font-weight: 500; font-size: 20px;  display: flex; width: 100%;" >Có @Model.ToList().Count  Tour </h1>
@foreach (var item in Model)
{
    <!-- Item tour -->
    <div class="col-sm col-md-6 col-lg-4 ftco-animate" style="padding: 0px 5px;">
        <div class="room">
            <a href="@Url.Action("DetailTour", "Tour", new { idTour = item.id_tour })" class="img d-flex justify-content-center align-items-center" style="background-image: url(../../images/images_tour/@Html.DisplayFor(modelItem => item.Avata)); height: 250px;">
                <div class="icon d-flex justify-content-center align-items-center">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </div>
            </a>
            <div class="text p-3 text-center" style="border-radius:10px; overflow:hidden;">
                <h3 class="mb-3" style="display: -webkit-box;
							                                -webkit-box-orient: vertical;
							                                -webkit-line-clamp: 2;
							                                overflow: hidden;
							                                text-overflow: ellipsis;
							                                font-family: Arial, Helvetica, sans-serif;
                                                            font-weight: 600;
                                                            font-size:16px;">
                    <a style="color: black;" href="@Url.Action("DetailTour", "Tour", new { idTour = item.id_tour })">
                        @Html.DisplayFor(modelItem => item.TenTour)
                    </a>
                </h3>
                <p>
                    <span class="price mr-2" style="font-size: 22px; color: red;">@(string.Format("{0:0,0} VNĐ", item.GiaNguoiLon))</span>
                    <ul class="list" style="text-align: left;">
                        <li style="text-align: center;"><span>Mã tour:<br><i class="fa fa-ticket" aria-hidden="true"></i> </span> @Html.DisplayFor(modelItem => item.id_tourmau)</li>
                        <li><span>Ngày đi:</span>  @Html.DisplayFor(modelItem => item.KhoiHanh)</li>
                        <li><span>Thời gian:</span>  @Html.DisplayFor(modelItem => item.ThoiGian)</li>
                    </ul>
                    <hr>
                <p class="pt-1" style="margin: 0px; padding: 0px;"><a href="@Url.Action("Booking", "Booking", new { idTour = item.id_tour })" class="btn-custom">Đặt Ngay <i class="fa fa-arrow-right" aria-hidden="true"></i></a></p>
            </div>
        </div>
    </div>
}


